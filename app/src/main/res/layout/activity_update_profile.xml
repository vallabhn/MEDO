<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile">

    <LinearLayout
        android:id="@+id/dashboard_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingHorizontal="25sp"
        android:paddingVertical="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/update_profile__back_arrow"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/left_arrow_blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingStart="10dp"
            android:text="Update Profile"
            android:textColor="@color/appblue"
            android:textSize="25sp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="25sp"
        android:layout_marginVertical="10sp"
        app:layout_constraintBottom_toTopOf="@+id/update_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:text="Name"
                android:textColor="#E8000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:layout_marginEnd="20sp"
                android:hint="Your Name"
                android:textColor="#000000"
                android:textColorHint="#FF494949"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:text="Mobile"
                android:textColor="#E8000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:layout_marginEnd="20sp"
                android:hint="Mobile Number"
                android:textColor="#000000"
                android:textColorHint="#FF494949"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:text="Address"
                android:textColor="#E8000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profile_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:layout_marginEnd="20sp"
                android:hint="Address"
                android:textColor="#000000"
                android:textColorHint="#FF494949"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:text="City"
                android:textColor="#E8000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/city_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:layout_marginEnd="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:text="City"
                android:textColor="#E8000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:layout_marginEnd="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:text="Pincode"
                android:textColor="#E8000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profile_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5sp"
                android:layout_marginEnd="20sp"
                android:hint="Pincode"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#FF494949"
                android:textSize="23sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/update_profile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:layout_weight="1"
        android:background="@drawable/blue_corner_bg"
        android:text="Update Profile"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>